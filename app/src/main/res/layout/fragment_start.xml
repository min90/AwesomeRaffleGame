<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome to the awesome raffle game"
        android:id="@+id/textView"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Game"
        android:id="@+id/btnStartGame"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Results"
        android:id="@+id/btnResults"
        android:layout_below="@+id/btnStartGame"
        android:layout_alignStart="@+id/btnStartGame"
        android:layout_marginTop="57dp"
        android:layout_alignEnd="@+id/btnStartGame" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:id="@+id/btnAbout"
        android:layout_below="@+id/btnResults"
        android:layout_alignStart="@+id/btnResults"
        android:layout_marginTop="71dp"
        android:layout_alignEnd="@+id/btnResults" />

</RelativeLayout>